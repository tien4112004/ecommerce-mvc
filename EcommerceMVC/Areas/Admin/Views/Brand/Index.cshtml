@using Microsoft.CodeAnalysis.CSharp.Syntax
@model IEnumerable<EcommerceMVC.Data.Models.Brand>

@{
    ViewData["Title"] = "All brands";
}

<h2 class="pageheader-title">Brands</h2>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <a asp-area="Admin" asp-controller="Brand" asp-action="Create" class="btn btn-info">New brand</a>
            <h5 class="card-header">Brands</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Slug</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var brand in @Model)
                            {
                                <tr>
                                    @* <th scope="row">1</th> *@
                                    <td>@brand.Id</td>
                                    <td>@brand.Name</td>
                                    <td>@brand.Description</td>
                                    <td>@brand.Slug</td>
                                    <td>@brand.Status</td>
                                    <td><img src="~/media/products/@brand.Image" width="120" alt="@brand.Name" /></td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Brand" asp-action="Edit" asp-route-brandId="@brand.Id"
                                            class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-area="Admin" asp-controller="Brand" asp-action="Delete"
                                            asp-route-brandId="@brand.Id" class="btn btn-danger btn-sm confirmDeletion">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Slug</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
