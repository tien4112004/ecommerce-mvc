@model IEnumerable<EcommerceMVC.Data.Models.Category>

@{
    ViewData["Title"] = "All categories";
}

<h2 class="pageheader-title">Categories</h2>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <a asp-controller="Category" asp-action="Create" class="btn btn-info">New category</a>
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Slug</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in @Model)
                            {
                                <tr>
                                    @* <th scope="row">1</th> *@
                                    <td>@category.Id</td>
                                    <td>@category.Name</td>
                                    <td>@category.Description</td>
                                    <td>@category.Slug</td>
                                    <td>@category.Status</td>
                                    <td>
                                        <a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@category.Id"
                                            class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-controller="Category" asp-action="Delete"
                                            asp-route-categoryId="@category.Id" class="btn btn-danger btn-sm confirmDeletion">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Slug</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
