@model IEnumerable<EcommerceMVC.Data.Models.Order>

@{
    ViewData["Title"] = "All orders";
    var statusBadges = new Dictionary<int, string>
{
{ OrderStatus.ORDERED, "<span class=\"badge badge-primary\">Ordered</span>" },
{ OrderStatus.NOTPAID, "<span class=\"badge badge-brand\">Not paid</span>" },
{ OrderStatus.SHIPPED, "<span class=\"badge badge-secondary\">Ordered</span>" },
{ OrderStatus.COMPLETED, "<span class=\"badge badge-success\">Completed</span>" },
{ OrderStatus.CANCELLED, "<span class=\"badge badge-danger\">Cancelled</span>" },
{ OrderStatus.DELIVERED, "<span class=\"badge badge-info\">Ordered</span>" },
{ OrderStatus.CONFIRMED, "<span class=\"badge badge-info\">Ordered</span>" },
{ OrderStatus.PREPARED, "<span class=\"badge badge-light\">Ordered</span>" },
};
}

<h2 class="pageheader-title">Orders</h2>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <a asp-area="Admin" asp-controller="Order" asp-action="Create" class="btn btn-info">New product</a>
            <h5 class="card-header">Orders</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Created time</th>
                                <th>Total amount</th>
                                <th>Address</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in @Model)
                            {
                                <tr>
                                    <td>@order.OrderId</td>
                                    <td>@order.CreatedTime</td>
                                    <td>@order.TotalAmount</td>
                                    <td>order.Address</td>
                                    <td>@Html.Raw(statusBadges[order.Status])</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Order" asp-action="Detail" asp-route-orderId="@order.OrderId"
                                            class="btn btn-info btn-sm">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Order ID</th>
                                <th>Created time</th>
                                <th>Total amount</th>
                                <th>Address</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
