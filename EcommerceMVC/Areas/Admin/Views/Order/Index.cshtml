@model IEnumerable<EcommerceMVC.Data.Models.Order>

@{
    ViewData["Title"] = "All orders";
}

<h2 class="pageheader-title">Orders</h2>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <a asp-controller="Order" asp-action="Create" class="btn btn-info">New product</a>
            <h5 class="card-header">Orders</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Created time</th>
                                <th>Total amount</th>
                                <th>Address</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in @Model)
                            {
                                <tr>
                                    <td>@order.OrderId</td>
                                    <td>@order.CreatedTime</td>
                                    <td>@order.TotalAmount</td>
                                    <td>order.Address</td>
                                    <td>@order.Status</td>
                                    <td>
                                        <a asp-controller="Order" asp-action="Detail" asp-route-orderId="@order.OrderId"
                                            class="btn btn-warning btn-sm">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Order ID</th>
                                <th>Created time</th>
                                <th>Total amount</th>
                                <th>Address</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
