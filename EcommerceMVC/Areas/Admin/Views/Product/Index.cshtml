@model IEnumerable<EcommerceMVC.Data.Models.Product>

@{
    ViewData["Title"] = "All products";
}

<h2 class="pageheader-title">Products</h2>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <a asp-controller="Product" asp-action="Create" class="btn btn-info">New product</a>
            <h5 class="card-header">Products</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Image</th>
                                <th>Slug</th>
                                <th>Category</th>
                                <th>Brand</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in @Model)
                            {
                                <tr>
                                    @* <th scope="row">1</th> *@
                                    <td>@product.Id</td>
                                    <td>@product.Name</td>
                                    <td>@product.Description</td>
                                    <td>@product.Price</td>
                                    <td><img src="~/media/products/@product.Image" width="120" alt="@product.Name" /></td>
                                    <td>@product.Slug</td>
                                    <td>@product.Category.Name</td>
                                    <td>@product.Brand.Name</td>
                                    <td>
                                        <a asp-controller="Product" asp-action="Edit" asp-route-productId="@product.Id"
                                            class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-controller="Product" asp-action="Delete"
                                            asp-route-productId="@product.Id" class="btn btn-danger btn-sm confirmDeletion">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Image</th>
                                <th>Slug</th>
                                <th>Category</th>
                                <th>Brand</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
