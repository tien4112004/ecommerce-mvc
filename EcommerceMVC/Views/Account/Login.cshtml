@model EcommerceMVC.Dtos.UserDtos.UserLoginDto

@{
    ViewData["Title"] = "Sign in";
}

<section id="form"><!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-1">
                <div class="login-form"><!--login form-->
                    <h2>Login to your account</h2>
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="col-form-label">Username</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Password</label>
                            <input asp-for="Password" class="form-control"></input>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-default">Login</button>
                    </form>
                    <a asp-controller="Account" asp-action="Register" class="pull-left">Register account</a>
                    <a asp-controller="Account" class="pull-right">Forgot password?</a>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->