@model EcommerceMVC.Dtos.UserDtos.UserRegisterDto

@{
    ViewData["Title"] = "Sign up";
}

<section id="form"><!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-1">
                <div class="signup-form"><!--sign up form-->
                    <h2>Sign up</h2>
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="col-form-label">Username</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Email</label>
                            <input asp-for="Email" class="form-control"></input>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Password</label>
                            <input asp-for="Password" class="form-control"></input>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Retype password</label>
                            <input asp-for="Password" class="form-control"></input>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-default">Sign up</button>
                    </form>
                    <a asp-controller="Account" asp-action="Login" class="pull-left">Have an account? Sign in</a>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->