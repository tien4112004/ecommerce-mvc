@model EcommerceMVC.Helpers.PagedResult<object>

<div class="pagination-controls">
    <form method="get" class="form-inline">
        <label for="pageSize">Items per page:</label>
        <select id="pageSize" name="pageSize" class="form-control" onchange="this.form.submit()">
            <option value="5" selected="@(Model.PageSize == 5 ? "selected" : null)">5</option>
            <option value="10" selected="@(Model.PageSize == 10 ? "selected" : null)">10</option>
            <option value="20" selected="@(Model.PageSize == 20 ? "selected" : null)">20</option>
            <option value="50" selected="@(Model.PageSize == 50 ? "selected" : null)">50</option>
        </select>
    </form>
</div>

<ul class="pagination">
    @if (Model.HasPreviousPage)
    {
        <li class="page-item">
            <a href="?page=1&pageSize=@Model.PageSize" class="page-link">First</a>
        </li>
        <li class="page-item">
            <a href="?page=@(Model.CurrentPage - 1)&pageSize=@Model.PageSize" class="page-link">Prev</a>
        </li>
    }

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
            <a href="?page=@i&pageSize=@Model.PageSize" class="page-link">@i</a>
        </li>
    }

    @if (Model.HasNextPage)
    {
        <li class="page-item">
            <a href="?page=@(Model.CurrentPage + 1)&pageSize=@Model.PageSize" class="page-link">Next</a>
        </li>
        <li class="page-item">
            <a href="?page=@Model.TotalPages&pageSize=@Model.PageSize" class="page-link">Last</a>
        </li>
    }
</ul>