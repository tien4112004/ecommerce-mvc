@section Scripts {
    <script>
        $(document).ready(function () {
            @if (TempData["Success"] != null)
            {
                <text>
                    showToast('success', '@TempData["Success"]');
                </text>
            }

            @if (TempData["Error"] != null)
            {
                <text>
                    showToast('error', '@TempData["Error"]');
                </text>
            }
        });
    </script>
}